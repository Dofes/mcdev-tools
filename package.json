{
    "name": "mcdev-tools",
    "displayName": "MC Dev Tools",
    "description": "一个用于我的世界中国版模组开发的调试工具插件。",
    "version": "0.1.7",
    "author": "Dofes",
    "publisher": "dofes",
    "repository": {
        "type": "git",
        "url": "https://github.com/Dofes/mcdev-tools"
    },
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug",
        "onDebugResolve:mcdev-tools",
        "workspaceContains:.mcdev.json",
        "workspaceContains:*/manifest.json",
        "onStartupFinished"
    ],
    "keywords": [
        "mcdevtools",
        "mcdev",
        "mc",
        "minecraft",
        "mcpdb",
        "mcdbg",
        "mcdk",
        "debugger",
        "debug",
        "python",
        "addon",
        "bedrock",
        "mcstudio",
        "mcs"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcdev-tools.startDebug",
                "title": "MC Dev Tools: 启动调试",
                "icon": "$(debug-start)"
            },
            {
                "command": "mcdev-tools.runGame",
                "title": "MC Dev Tools: 运行游戏 (mcdk.exe)",
                "icon": "$(play)"
            },
            {
                "command": "mcdev-tools.showSidebarPanel",
                "title": "MC Dev Tools: 打开侧边栏面板",
                "icon": "$(window)"
            }
        ],
        "debuggers": [
            {
                "type": "mcdev-tools",
                "label": "MC Dev Tools Debug",
                "languages": [
                    "python"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "timeout": {
                                "type": "number",
                                "description": "等待调试器就绪的超时时间（毫秒）",
                                "default": 60000
                            },
                            "mcdkPath": {
                                "type": "string",
                                "description": "mcdk.exe 路径（留空使用内置）",
                                "default": ""
                            },
                            "dapConfig": {
                                "type": "object",
                                "description": "传递给 debugpy 的 DAP 配置",
                                "properties": {
                                    "justMyCode": {
                                        "type": "boolean",
                                        "description": "是否仅调试用户代码",
                                        "default": false
                                    },
                                    "pathMappings": {
                                        "type": "array",
                                        "description": "路径映射配置",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "localRoot": {
                                                    "type": "string",
                                                    "description": "本地路径"
                                                },
                                                "remoteRoot": {
                                                    "type": "string",
                                                    "description": "远程路径"
                                                }
                                            }
                                        }
                                    },
                                    "debugOptions": {
                                        "type": "object",
                                        "description": "ptvsd 调试选项",
                                        "properties": {
                                            "showPrivateMembers": {
                                                "type": "boolean",
                                                "description": "显示私有成员（以 _ 开头）",
                                                "default": false
                                            },
                                            "showSpecialMembers": {
                                                "type": "boolean",
                                                "description": "显示特殊成员（以 __ 开头和结尾）",
                                                "default": false
                                            },
                                            "showFunctionMembers": {
                                                "type": "boolean",
                                                "description": "显示函数成员",
                                                "default": false
                                            },
                                            "showBuiltinMembers": {
                                                "type": "boolean",
                                                "description": "显示内置成员",
                                                "default": false
                                            }
                                        }
                                    },
                                    "subProcess": {
                                        "type": "boolean",
                                        "description": "是否调试子进程"
                                    },
                                    "redirectOutput": {
                                        "type": "boolean",
                                        "description": "是否重定向输出"
                                    }
                                },
                                "additionalProperties": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "mcdev-tools",
                        "request": "launch",
                        "name": "Minecraft Python Debug",
                        "dapConfig": {
                            "justMyCode": false
                        }
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "MC Dev Tools: 启动调试",
                        "description": "启动游戏并附加 Python 调试器",
                        "body": {
                            "type": "mcdev-tools",
                            "request": "launch",
                            "name": "Minecraft Python Debug",
                            "timeout": 60000,
                            "dapConfig": {
                                "justMyCode": false
                            }
                        }
                    }
                ]
            },
            {
                "type": "mcdev-tools-inject",
                "label": "MC Dev Tools Debug (Inject)",
                "languages": [
                    "python"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "调试端口号",
                                "default": 5678
                            },
                            "timeout": {
                                "type": "number",
                                "description": "等待注入超时时间（毫秒）",
                                "default": 30000
                            },
                            "mcdbgPath": {
                                "type": "string",
                                "description": "mcdbg.exe 路径（留空使用内置）",
                                "default": ""
                            },
                            "dapConfig": {
                                "type": "object",
                                "description": "传递给 debugpy 的 DAP 配置",
                                "properties": {
                                    "justMyCode": {
                                        "type": "boolean",
                                        "description": "是否仅调试用户代码",
                                        "default": false
                                    }
                                },
                                "additionalProperties": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "mcdev-tools-inject",
                        "request": "launch",
                        "name": "Minecraft Debug (Inject)",
                        "port": 5678,
                        "dapConfig": {
                            "justMyCode": false
                        }
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "MC Dev Tools: 注入调试 (mcdbg)",
                        "description": "使用 mcdbg 注入 debugpy 到运行中的游戏",
                        "body": {
                            "type": "mcdev-tools-inject",
                            "request": "launch",
                            "name": "Minecraft Debug (Inject)",
                            "port": 5678,
                            "timeout": 30000,
                            "dapConfig": {
                                "justMyCode": false
                            }
                        }
                    }
                ]
            }
        ],
        "configuration": {
            "title": "MC Dev Tools",
            "properties": {
                "mcdev-tools.timeout": {
                    "type": "number",
                    "default": 60000,
                    "description": "等待调试器就绪的超时时间（毫秒）"
                },
                "mcdev-tools.mcdkPath": {
                    "type": "string",
                    "default": "",
                    "description": "可选：mcdk.exe 的路径（留空使用插件内置 bin/mcdk.exe 或相对于工作区路径）"
                },
                "mcdev-tools.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否启用 MC Dev Tools 插件（若启用则即使未检测到项目结构也会激活）。建议只在 MC addon 项目手动开启。"
                },
                "mcdev-tools.ptvsd.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "是否启用 ptvsd 调试模式（官方调试器接口）"
                },
                "mcdev-tools.ptvsd.ip": {
                    "type": "string",
                    "default": "localhost",
                    "description": "ptvsd 调试 IP 地址"
                },
                "mcdev-tools.ptvsd.port": {
                    "type": "number",
                    "default": 5678,
                    "description": "ptvsd 调试端口（多客户端时会自动分配）"
                },
                "mcdev-tools.ptvsd.justMyCode": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否仅调试用户代码"
                },
                "mcdev-tools.ptvsd.debugOptions.showPrivateMembers": {
                    "type": "boolean",
                    "default": true,
                    "description": "在变量视图中显示私有成员（以 _ 开头）"
                },
                "mcdev-tools.ptvsd.debugOptions.showSpecialMembers": {
                    "type": "boolean",
                    "default": true,
                    "description": "在变量视图中显示特殊成员（以 __ 开头和结尾）"
                },
                "mcdev-tools.ptvsd.debugOptions.showFunctionMembers": {
                    "type": "boolean",
                    "default": true,
                    "description": "在变量视图中显示函数成员"
                },
                "mcdev-tools.ptvsd.debugOptions.showBuiltinMembers": {
                    "type": "boolean",
                    "default": true,
                    "description": "在变量视图中显示内置成员"
                }
            }
        },
        "keybindings": [
            {
                "command": "mcdev-tools.runGame",
                "key": "ctrl+f5",
                "when": "mcdev-tools:enabled && editorTextFocus"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mcdev-tools",
                    "title": "MC Dev Tools Config",
                    "icon": "./images/icon.svg"
                }
            ]
        },
        "views": {
            "mcdev-tools": [
                {
                    "type": "webview",
                    "id": "mcdev-tools.sidebar",
                    "name": "MC Dev Tools Config",
                    "when": "mcdev-tools:showSidebar",
                    "icon": "./images/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile && npm run compile:webview",
        "compile": "tsc -p ./",
        "compile:webview": "cd webview && npm run build",
        "watch": "tsc -watch -p ./",
        "watch:webview": "cd webview && npm run dev",
        "build": "npm run compile && npm run compile:webview",
        "lint": "eslint src --ext ts"
    },
    "dependencies": {
        "jsonc-parser": "^3.2.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^18.x",
        "@vscode/codicons": "^0.0.36",
        "typescript": "^5.3.0"
    }
}
