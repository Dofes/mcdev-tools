{
    "name": "mcdev-tools",
    "displayName": "MC Dev Tools",
    "description": "MC 开发工具集，集成 mcpdb 调试器和 mcdk 启动器",
    "version": "0.0.2",
    "author": "Dofes",
    "publisher": "dofes",
    "repository": {
        "type": "git",
        "url": "https://github.com/Dofes/mcpdb"
    },
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug",
        "onDebugResolve:mcdev-tools",
        "workspaceContains:.mcdev.json",
        "workspaceContains:*/manifest.json",
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "mcdev-tools.startDebug",
                "title": "MC Dev Tools: 启动调试",
                "icon": "$(debug-start)"
            },
            {
                "command": "mcdev-tools.runGame",
                "title": "MC Dev Tools: 运行游戏 (mcdk.exe)",
                "icon": "$(play)"
            },
            {
                "command": "mcdev-tools.showSidebarPanel",
                "title": "MC Dev Tools: 打开侧边栏面板",
                "icon": "$(window)"
            }
        ],
        "debuggers": [
            {
                "type": "mcdev-tools",
                "label": "MC Dev Tools Debug",
                "languages": [
                    "python"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "port": {
                                "type": "number",
                                "description": "调试端口号",
                                "default": 5678
                            },
                            "timeout": {
                                "type": "number",
                                "description": "等待超时时间（毫秒）",
                                "default": 30000
                            },
                            "mcdbgPath": {
                                "type": "string",
                                "description": "mcdbg.exe 路径（留空使用内置）",
                                "default": ""
                            },
                            "dapConfig": {
                                "type": "object",
                                "description": "传递给 debugpy 的 DAP 配置",
                                "properties": {
                                    "justMyCode": {
                                        "type": "boolean",
                                        "description": "是否仅调试用户代码",
                                        "default": false
                                    },
                                    "pathMappings": {
                                        "type": "array",
                                        "description": "路径映射配置",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "localRoot": {
                                                    "type": "string",
                                                    "description": "本地路径"
                                                },
                                                "remoteRoot": {
                                                    "type": "string",
                                                    "description": "远程路径"
                                                }
                                            }
                                        }
                                    },
                                    "subProcess": {
                                        "type": "boolean",
                                        "description": "是否调试子进程"
                                    },
                                    "redirectOutput": {
                                        "type": "boolean",
                                        "description": "是否重定向输出"
                                    }
                                },
                                "additionalProperties": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "mcdev-tools",
                        "request": "launch",
                        "name": "MC Dev Tools Debug",
                        "dapConfig": {
                            "justMyCode": false
                        }
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "MC Dev Tools Debug: Launch",
                        "description": "启动 mcdbg 并附加调试器",
                        "body": {
                            "type": "mcdev-tools",
                            "request": "launch",
                            "name": "MC Dev Tools Debug",
                            "port": 5678,
                            "timeout": 30000,
                            "dapConfig": {
                                "justMyCode": false
                            }
                        }
                    }
                ]
            }
        ],
        "configuration": {
            "title": "MC Dev Tools",
            "properties": {
                "mcdev-tools.port": {
                    "type": "number",
                    "default": 5678,
                    "description": "调试端口号"
                },
                "mcdev-tools.timeout": {
                    "type": "number",
                    "default": 30000,
                    "description": "等待 mcdbg 注入的超时时间（毫秒）"
                },
                "mcdev-tools.mcdbgPath": {
                    "type": "string",
                    "default": "",
                    "description": "mcdbg.exe 的路径（留空使用插件内置，或指定相对于工作区/绝对路径）"
                },
                "mcdev-tools.mcdkPath": {
                    "type": "string",
                    "default": "",
                    "description": "可选：mcdk.exe 的路径（留空使用插件内置 bin/mcdk.exe 或相对于工作区路径）"
                },
                "mcdev-tools.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "是否启用 MC Dev Tools 插件（若启用则即使未检测到项目结构也会激活）。建议只在 MC addon 项目手动开启。"
                }
            }
        },
        "keybindings": [
            {
                "command": "mcdev-tools.runGame",
                "key": "ctrl+f5",
                "when": "mcdev-tools:enabled && editorTextFocus"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "mcdev-tools",
                    "title": "MC Dev Tools Config",
                    "icon": "./images/icon.svg"
                }
            ]
        },
        "views": {
            "mcdev-tools": [
                {
                    "type": "webview",
                    "id": "mcdev-tools.sidebar",
                    "name": "MC Dev Tools Config",
                    "when": "mcdev-tools:showSidebar",
                    "icon": "./images/icon.svg"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "build": "tsc -p tsconfig.release.json",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/node": "^18.x",
        "typescript": "^5.3.0"
    }
}